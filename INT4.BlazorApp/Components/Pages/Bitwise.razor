@page "/bitwise"
@rendermode InteractiveServer
<h1>Bitwise</h1>


<p>
    N:
    <input @bind=n />

</p>
<p>
    M:
    <input @bind=m />
</p>

<table class="table">
    <tbody>
        <tr>
            <th>@n</th>
            <th>@(Convert.ToString(n, 2).PadLeft(32, '0'))</th>
            <td>N</td>
        </tr>
        <tr>
            <td>~ @n</td>
            <td>@(Convert.ToString(~n, 2).PadLeft(32, '0'))</td>
            <td>Complemento</td>
        </tr>
        <tr>
            <td>- @n</td>
            <td>@(Convert.ToString(-n, 2).PadLeft(32, '0'))</td>
            <td>Negazione</td>
        </tr>
        <tr>
            <th>@m</th>
            <th>@(Convert.ToString(m, 2).PadLeft(32, '0'))</th>
            <td>M</td>
        </tr>
        <tr>
            <td>@n | @m</td>
            <td>@(Convert.ToString(n | m, 2).PadLeft(32, '0'))</td>
            <td>Or bit a bit</td>
        </tr>
        <tr>
            <td>@n & @m</td>
            <td>@(Convert.ToString(n & m, 2).PadLeft(32, '0'))</td>
            <td>And bit a bit</td>
        </tr>
        <tr>
            <td>@n ^ @m</td>
            <td>@(Convert.ToString(n ^ m, 2).PadLeft(32, '0'))</td>
            <td>Xor bit a bit</td>
        </tr>
    </tbody>

</table>

<select @bind="selectedColor">
    @foreach (Color color in Enum.GetValues(typeof(Color)))
    {
        <option value="@color">@color</option>
    }
</select> <p>Selected Color: @selectedColor</p>

@code {
    private Color selectedColor = Color.Blue;
    int n, m;

    public enum Color
    {
        Rosso,
        Verde,
        Blue,
        Giallo,
        Arancio,
        Nero,
        Bianco
    }

}
